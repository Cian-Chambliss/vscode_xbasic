{
    "name": "xbasic",
    "displayName": "Xbasic Language",
    "description": "Alpha Anywhere Xbasic",
    "version": "0.0.1",
    "publisher": "AlphaAnywhere",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
      "onLanguage:xbasic"
    ],
    "main": "./client/extension",    
    "contributes": {
        "languages": [{
            "id": "xbasic",
            "aliases": ["Alpha Anywhere XBASIC", "xbasic"],
            "extensions": [".a5udf",".a5scr",".a5class"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "xbasic",
            "scopeName": "source.xbasic",
            "path": "./syntaxes/xbasic.tmLanguage"
        }]
    },
    "repository" :
    { "type" : "git"
    , "url" : "https://github.com/Cian-Chambliss/vscode_xbasic.git"
    }    
}